<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <ripple android:color="?colorControlHighlight">
            <item>
                <shape>
                    <corners android:radius="100dp" />
                    <solid android:color="@color/volume_button_background" />
                    <stroke android:width="2dip" android:color="@color/volume_button_outline" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="100dp" />
            <solid android:color="@color/control_button_background_disabled" />
            <stroke android:width="2dip" android:color="@color/control_button_outline_disabled" />
        </shape>
    </item>
</selector>
